export TestCase := Window {
    width: 100phx;
    height: 100phx;
    property<int> value: -10;
    property <bool> cond: true;

    VerticalLayout {
        padding: 0px;
        spacing: 0px;

        Rectangle { background: orange; }

        if (true) : Rectangle {
            background: blue;
            TouchArea {
                clicked => {
                    root.value = 1;
                }
            }
        }
        if (cond) : Rectangle {
            background: red;
            TouchArea {
                clicked => {
                    root.value = 2;
                }
            }
        }
        if (false) : Rectangle {
            background: green;
            TouchArea {
                clicked => {
                    root.value = 3;
                }
            }
        }

        Rectangle {
            background: pink;
            TouchArea {
                clicked => {
                    root.value = 2;
                }
            }
        }
    }
}

// There should be 4 rectangle: so 100 devided by 5 is 25.

