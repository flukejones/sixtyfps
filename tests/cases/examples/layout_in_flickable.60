W := Window {
    VerticalLayout {
        Text {
            text: "Header";
        }

        flickable := Flickable {
            vertical-stretch: 1;

            VerticalLayout {            
                alignment: start;
                for i in 100: Rectangle {
                    border-color: black;
                    border-width: 1px;

                    HorizontalLayout {
                        Text {
                            text: "Item " + i;
                        }
                    }
                }
            }
        }
    }

    // show flickable viewport
    Rectangle {
        border-width: 1px;
        border-color: black;
        x: flickable.x;
        y: flickable.y;
        width: flickable.width;
        height: flickable.height;
    }

}

